{
    "version": 2,
    "builds": [
        {
            "src": "public/**",
            "use": "@now/static"
        },
        {
            "src": "app.js",
            "use": "@now/node"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "api.js"
        }
    ]
}